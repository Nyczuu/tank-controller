<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo_metal"

    tools:context=".shooterView">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="367dp"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/rotateTower"
            style="@android:style/Widget.SeekBar"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rotateTowerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="FORWARD/BACKWARD"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/rotateTower"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="367dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fireButtonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="FIRE"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/fireButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/fireButton"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="169dp"
            android:layout_height="169dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/button_bez_tla"
            tools:srcCompat="@drawable/button_bez_tla" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>